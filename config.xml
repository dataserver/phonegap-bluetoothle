<?xml version='1.0' encoding='utf-8'?>
<widget 
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:gap="http://phonegap.com/ns/1.0"
	id="com.github.dataserver.bluetoothle" 
	version="5" 
>
    <name>Bluetoothle Scanner</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dataserver@users.noreply.github.com" href="http://dataserver.github.io">
        dataserver
    </author>
    
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-bluetoothle" spec="~4.5.6" source="npm" />
    <plugin name="cordova-plugin-android-permissions" spec="~1.0.2" source="npm" />
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android" />

    <preference name="android-targetSdkVersion" value="26" />
    <preference name="KeepRunning" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="SuppressesIncrementalRendering" value="true" />
   
</widget>